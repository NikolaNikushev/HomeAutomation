[Unit]
Description=Server 8000
After=multi-user.target

[Service]
Type=idle
ExecStart=cd /home/pi/Desktop/scripts/server && /usr/bin/git pull > /home/pi/Desktop/Logs/server/git.log 2>&1 && /usr/bin/npm start < /dev/null & > /home/pi/Desktop/Logs/server/boot.log 2>&1
Restart=always
RestartSec=10
StandardOutput=file:/home/pi/Desktop/Logs/server/output.log
StandardError=file:/home/pi/Desktop/Logs/server/error.log
SyslogIdentifier=nodejs-server
[Install]
WantedBy=multi-user.target
